{
  "name": "plugin-virtuals-acp",
  "description": "ElizaOS plugin for Virtuals ACP integration",
  "author": "Vaultlayer",
  "license": "MIT",
  "keywords": ["plugin", "elizaos"],
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@elizaos/source": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "^1.5.10",
    "@virtuals-protocol/acp-node": "^0.3.0-beta.9"    
  },
  "devDependencies": {
    "prettier": "3.5.3",
    "tsup": "8.4.0",
    "vitest": "2.1.5",
    "typescript": "^5.8.3",
    "tslib": "2.8.1",
    "@types/node": "^22.10.2"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "prettier --write ./src",
    "test": "tsup && elizaos test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ACP_WALLET_PRIVATE_KEY": {
        "type": "string",
        "description": "ACP whitelisted wallet private key",
        "required": true,
        "sensitive": true
      },
      "ACP_ENTITY_ID": {
        "type": "string",
        "description": "ACP whitelisted entity ID",
        "required": true,
        "sensitive": false
      },
      "ACP_AGENT_WALLET_ADDRESS": {
        "type": "string",
        "description": "ACP agent wallet address",
        "required": true,
        "sensitive": false
      },
      "ACP_CONFIG_VERSION": {
        "type": "string",
        "description": "ACP config version",
        "required": false,
        "default": "V2",
        "sensitive": false
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaultlayer/plugin-virtuals-acp.git"
  },
  "packageManager": "bun@1.2.10"
}
